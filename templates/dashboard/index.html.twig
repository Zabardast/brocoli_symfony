{% block body %}

{{ macro.header_template() }}

<div class="container">
  <div class="row">
    <div class="col">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Chiffre d'affaire</h5>
            <p>Chiffre d affaire paye : &euro;{{ CApayed }}&euro;</p>
