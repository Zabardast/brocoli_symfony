{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <h1>Project index</h1>
    <a href="{{ path('dashboard') }}">dashboard</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Status</th>
                {# {% if project.billing != null %} #}
                <th>billing</th>
                {# {% endif %} #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.status }}</td>
                <td>{{ project.price }}
                {% if project.billing != null %}
                <td>
                    <a href="{{ path('billing_show', {'id': project.billing.id}) }}">billing</a>
                </td>
                {% else %}
                <td>
                    no billing for the project
                </td>
                {% endif %}
                <td>
                    <a href="{{ path('project_show', {'id': project.id}) }}">show</a>
                    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('project_new') }}">Create new</a>
{% endblock %}
